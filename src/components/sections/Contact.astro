---
import Button from "../Button.astro";
import SectionHeader from "../SectionHeader.astro";
---

<section id="contact" class="w-full py-14 md:py-20 lg:py-24">
    <div class="cust-container">
        <SectionHeader
            heading="Contact Us"
            info="Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas."
        />
    </div>
    <div class="mt-14">
        <div
            style="overflow:hidden;resize:none;max-width:100%;width:100%;height:400px;"
        >
            <div
                id="embed-ded-map-canvas"
                style="height:100%; width:100%;max-width:100%;"
            >
                <iframe
                    style="height:100%;width:100%;border:0;"
                    frameborder="0"
                    src="https://www.google.com/maps/embed/v1/place?q=Cabantian,+Buhangin,+Davao+City,+Davao+del+Sur,+Philippines&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
                ></iframe>
            </div><a
                class="googlecoder"
                href="https://www.bootstrapskins.com/themes"
                id="make-map-infor-mation">premium bootstrap themes</a
            >
            <style>
                #embed-ded-map-canvas img {
                    max-width: none !important;
                    background: none !important;
                    font-size: inherit;
                    font-weight: inherit;
                }
            </style>
        </div>
    </div>
    <div class="cust-container">
        <div class="mt-14 grid lg:grid-cols-3">
            <div class="lg:col-span-1">
                <div class="flex items-center">
                    <i class="fa-solid fa-location text-primary text-3xl pr-7"
                    ></i>
                    <div class="leading-7">
                        <h4 class="text-xl mb-1 font-semibold">Location</h4>
                        <p class="text-smoke text-sm">Cabantian, Davao City</p>
                    </div>
                </div>
                <div class="flex items-center mt-10">
                    <i class="fa-solid fa-envelope text-primary text-3xl pr-7"
                    ></i>
                    <div class="leading-7">
                        <h4 class="text-xl mb-1 font-semibold">Email</h4>
                        <p class="text-smoke text-sm">futurefusion@email.com</p>
                    </div>
                </div>
                <div class="flex items-center mt-10">
                    <i class="fa-solid fa-phone text-primary text-3xl pr-7"></i>
                    <div class="leading-7">
                        <h4 class="text-xl mb-1 font-semibold">Call</h4>
                        <p class="text-smoke text-sm">+0123456789</p>
                    </div>
                </div>
            </div>
            <div class="lg:col-span-2 mt-10 lg:mt-0">
                <form action="" class="w-full">
                    <div class="lg:flex lg:gap-x-3">
                        <input
                            type="text"
                            name="name"
                            id="name"
                            class="p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                            placeholder="Your Name"
                        />
                        <input
                            type="email"
                            name="email"
                            id="email"
                            class="mt-3 lg:mt-0 p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                            placeholder="Your Email"
                        />
                    </div>
                    <input
                        type="text"
                        name="subject"
                        id="subject"
                        class="mt-3 p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        placeholder="Your Subject"
                    />

                    <textarea
                        rows="4"
                        name="message"
                        id="message"
                        class="mt-3 p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                        placeholder="Your Message"></textarea>

                    <Button className="mt-2">Submit</Button>
                </form>
            </div>
        </div>
    </div>
</section>
