---
import SectionHeader from "../SectionHeader.astro";
---

<section
    class="relative py-32 after:absolute after:top-0 after:right-0 after:bottom-0 after:w-full lg:after:w-[60%] after:bg-info after:-z-10"
>
    <div class="cust-container z-[10]">
        <div class="lg:flex">
            <div
                class="lg:w-1/2 pb-[70%] lg:pb-[50%] bg-[url('/images/why-us-bg.jpg')] bg-cover bg-top lg:bg-center shadow-xl rounded-lg"
            >
            </div>
            <div class="lg:w-1/2 lg:pl-10 mt-10 lg:mt-0">
                <SectionHeader
                    heading="About Us"
                    info="Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem."
                    textWhite={true}
                />
            </div>
        </div>
    </div>
</section>
