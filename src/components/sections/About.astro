---
import SectionHeader from "../SectionHeader.astro";

import aboutData from "../../data/about.json";
---

<section
    class="relative py-16 lg:py-24 after:absolute after:top-0 after:right-0 after:bottom-0 after:w-full xl:after:w-[60%] after:bg-secondary after:-z-10"
>
    <div class="cust-container z-[10]">
        <div class="xl:flex">
            <div
                class="xl:w-1/2 2xl:w-[55%] pb-[80%] lg:pb-[60%] 2xl:pb-0 bg-[url('/images/why-us-bg.jpg')] bg-cover bg-top xl:bg-center shadow-2xl rounded-lg"
            >
            </div>
            <div class="xl:w-1/2 2xl:w-[45%] xl:pl-12 mt-10 xl:mt-0">
                <SectionHeader
                    heading="About Us"
                    info="Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. quas molestias excepturi sint occaecati cupiditate non provident"
                    textWhite={true}
                />
                <ol class="mt-10 lg:grid lg:grid-cols-2 gap-3">
                    {
                        aboutData.map((i) => (
                            <li class="flex mb-5 lg:col-span-1 xl:col-span-2">
                                <i
                                    class={`fa ${i.icon} mr-6 text-primary w-5 h-5 p-2`}
                                />
                                <div class="leading-7">
                                    <h3 class="text-white text-lg font-semibold mb-2">
                                        {i.title}
                                    </h3>
                                    <p class="text-sm text-dim">{i.content}</p>
                                </div>
                            </li>
                        ))
                    }
                </ol>
            </div>
        </div>
    </div>
</section>
